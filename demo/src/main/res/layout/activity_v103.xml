<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_v103"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="me.czmc.widgetdemo.v103.V103Activity">
    <!--ViewPagerIndicator-->
    <me.czmc.library.widget.ViewPagerIndicator
        android:id="@+id/viewPagerIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        app:defaultTextColor="@android:color/white"
        app:firstPosition="0"
        app:highLightTextColor="@color/colorAccent"
        app:indicatorColor="@color/colorAccent"
        app:indicatorHeight="5dp"
        app:indicatorLimit="2"
        app:indicatorType="angel"
        app:textsize="16sp"
        app:visibleMenuCount="3" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</RelativeLayout>
