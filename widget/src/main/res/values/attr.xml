<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--带统计的编辑框-->
    <declare-styleable name="EditTextWithCounter">
        <attr name="counterColor" format="color"/>
        <attr name="counterSize" format="dimension"/>
        <attr name="limit" format="integer"/>
        <attr name="line" format="integer"/>
    </declare-styleable>
    <!--  自定义圆形  图标 -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <!-- viewpager 指针-->
    <declare-styleable name="ViewPagerIndicator">
        <attr name="indicatorColor" format="color" />
        <attr name="textsize" format="dimension" />
        <attr name="highLightTextColor" format="color" />
        <attr name="defaultTextColor" format="color" />
        <attr name="indicatorHeight" format="dimension" />
        <attr name="indicatorWidth" format="dimension" />
        <attr name="visibleMenuCount" format="integer" />
        <attr name="indicatorLimit" format="integer" />
        <attr name="firstPosition" format="integer" />
        <attr name="indicatorType" format="integer" >
            <flag name="angel" value="0" />
            <flag name="line" value="1" />
        </attr>
    </declare-styleable>
    <!-- HorizontalProgressBar atta declare-->
    <declare-styleable name="HorizontalProgressBarWithCounter">
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="textOffset" format="dimension" />
        <attr name="textVisible" format="boolean" />
        <attr name="reachedColor" format="color" />
        <attr name="reachedHeight" format="dimension" />
        <attr name="unReachedColor" format="color" />
        <attr name="unReachedHeight" format="dimension" />
    </declare-styleable>
    <!-- RoundProgressBar atta declare-->
    <declare-styleable name="RoundProgressBarWithCounter">
        <attr name="roundRadius" format="dimension" />
    </declare-styleable>
    <!-- HorizomtalSelector-->
    <declare-styleable name="HorizomtalSelector">
        <attr name="displayItemCount" format="integer" />
        <attr name="textColorFocus" format="color" />
        <attr name="textColorNormal" format="color" />
        <attr name="itemTextSize" format="dimension" />
        <attr name="indicatorSize" format="dimension" />
    </declare-styleable>
    <!--switchView-->
    <declare-styleable name="SwitchView">
        <attr name="primaryColor" format="color"/>
    </declare-styleable>
    <!--switchView-->
    <declare-styleable name="RadiusImageView">
        <attr name="radius" format="dimension"/>
    </declare-styleable>
</resources>